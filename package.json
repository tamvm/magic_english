{
  "name": "magic-english-web",
  "version": "1.0.0",
  "description": "Magic English - AI-Powered Vocabulary Learning Web App",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "cd backend && npm run dev",
    "dev:client": "cd frontend && npm run dev",
    "build": "npm-run-all build:server build:client",
    "build:server": "cd backend && npm run build",
    "build:client": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install:deps": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "reset-today": "./scripts/reset-today.sh",
    "reset-today:dry-run": "./scripts/reset-today.sh --dry-run"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "keywords": [
    "vocabulary",
    "ai",
    "education",
    "english learning",
    "web app",
    "react",
    "node.js",
    "supabase"
  ],
  "author": "dtongg03",
  "license": "MIT"
}